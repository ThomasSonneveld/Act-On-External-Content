{
  "manifest_version": 3,
  "name": "FWAct-On external content v3.0.0", // Ook aanpassen in content.js en version.txt
  "version": "3.0.0",
  "content_scripts": [
    {
      "matches": [
        "*://*.actonsoftware.com/acton/_compose/*"
      ],

      "js": ["LoadCanvas.js", "Append.js", "DefineIndexStyle.js", "content.js"],
       "css" : ["main.css"]
    }
  ],
  "background": {
      "service_worker": "browser.js",
      "type": "module"
  },
  "action": {
    "default_icon": "ActOnPlusIcon.png"
  }
}
